<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_review_write"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.trappan.Activity.ReviewWriteActivity"
    android:orientation="vertical"
    android:background="#f2f1f1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_button"
            android:id="@+id/review_backbutton"
            android:layout_marginRight="140dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <TextView
        android:text="경주시 안압지"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review"
        android:textColor="@android:color/holo_purple"
        android:textSize="20sp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/review_layoutbutton"
        android:clickable="true"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/review_img1"
                android:layout_weight="1"
                android:src="@drawable/review_imageadd"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/review_img2"
                android:layout_weight="1"
                android:src="@drawable/review_imageadd"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/review_img3"
                android:layout_weight="1"
                android:src="@drawable/review_imageadd"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/review_img4"
                android:layout_weight="1"
                android:src="@drawable/review_imageadd"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/review_img5"
                android:layout_weight="1"
                android:src="@drawable/review_imageadd"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/review_img6"
                android:layout_weight="1"
                android:src="@drawable/review_imageadd"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/review_title"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            android:background="@drawable/xml_border"
            android:padding="5dp"
            android:hint="제목을 입력하세요"
            android:textColorHint="@color/cardview_shadow_start_color"
            android:textSize="14sp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textPersonName"
            android:ems="10"
            android:id="@+id/review_content"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            android:background="@drawable/xml_border"
            android:gravity="top|center_vertical"
            android:hint="내용을 입력하세요"
            android:textColorHint="@color/cardview_shadow_start_color"
            android:textSize="14sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:scrollHorizontally="false"
            android:lines="10"
            android:padding="5dp" />
    </LinearLayout>

    <Button
        android:text="완료"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review_completebutton"
        android:background="@drawable/login_button"
        android:textSize="16sp"
        android:layout_margin="7dp" />

</LinearLayout>
