<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="kr.co.trappan.Activity.DetailInformationActivity">



        <android.support.v7.widget.RecyclerView
            android:id="@+id/detail_information_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <!--FrameLayout 으로 해야함-->
    <com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dip">

                <ImageView
                    android:id="@+id/main_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="17dip"
                            android:layout_height="17dip"
                            android:background="@drawable/rating_star"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/main_image_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="관악구"/>

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="서울대학교 미술관"/>
                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dip">

                <!--버튼1-->
                <FrameLayout
                    android:layout_marginLeft="17dip"
                    android:layout_marginRight="6dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"

                    android:layout_width="55dip"
                    android:layout_height="64.625dp">
                    <ImageView
                        android:id="@+id/btn1_image1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:background="@drawable/detail_icon_01_01"/>
                    <LinearLayout
                        android:gravity="bottom|center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="111"/>

                    </LinearLayout>

                </FrameLayout>

                <!--버튼2-->
                <FrameLayout
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:layout_width="55dip"
                    android:layout_height="64.625dp">

                    <ImageView
                        android:id="@+id/btn1_image2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:background="@drawable/detail_icon_02_01"/>
                    <LinearLayout
                        android:gravity="bottom|center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="49"/>

                    </LinearLayout>

                </FrameLayout>

                <!--버튼3-->
                <FrameLayout
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:layout_width="55dip"
                    android:layout_height="64.625dp">

                    <ImageView
                        android:id="@+id/btn1_image3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:background="@drawable/detail_icon_03_01"/>
                    <LinearLayout
                        android:gravity="bottom|center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="@android:color/black"
                            android:text="평가하기"/>

                    </LinearLayout>

                </FrameLayout>

                <!--버튼4-->
                <FrameLayout
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:layout_width="55dip"
                    android:layout_height="64.625dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/detail_icon_01_01"/>
                    <LinearLayout
                        android:gravity="bottom|center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="10sp"
                            android:text="예술"/>

                    </LinearLayout>

                </FrameLayout>

                <!--버튼5-->
                <FrameLayout
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="15dip"

                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:layout_width="55dip"
                    android:layout_height="64.625dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/detail_icon_01_01"/>
                    <LinearLayout
                        android:gravity="bottom|center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="추천 여행"
                            android:textSize="10sp"/>

                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>

            <View
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@android:color/black"></View>

            <TextView
                android:layout_marginLeft="10dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="서울특별시 > 관악구 > 서울대학교 미술관 > MOA"/>

            <TextView
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="서울대학교미술관은 여러 해 동안의 긴 준비끝에 서울대학교 박물관 현대미술부에서 독립하여 국내최초의 대학미술관으로 탄생하게 되었다. 삼성그룹이 건립히여..."/>



        </LinearLayout>


    </com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader>


</FrameLayout>

