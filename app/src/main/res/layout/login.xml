<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="kr.co.trappan.Activity.LoginActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_01">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:paddingTop="20dip"
        android:paddingRight="90dip"
        android:paddingLeft="90dip"
        android:paddingBottom="40dip"
        android:src="@drawable/icon"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingTop="10px"
        android:paddingBottom="10px"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:textColor="#5d10ac"
        android:textStyle="bold"
        android:text="EMAIL"/>
    <EditText
        android:id="@+id/login_id_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/login_edittext"
        android:paddingTop="10px"
        android:paddingBottom="10px"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:hint="ex)abcdef@email.com"
        android:textColorHint="#7f000000"
        android:gravity="left"
        android:textSize="14dip"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingTop="10px"
        android:paddingBottom="10px"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:textColor="#5d10ac"
        android:textStyle="bold"
        android:text="PASSWORD"/>
    <EditText
        android:id="@+id/login_pw_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/login_edittext"
        android:paddingTop="10px"
        android:paddingBottom="10px"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:hint="********"
        android:textColorHint="#7f000000"
        android:gravity="left"
        android:textSize="14dip"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="25px"
        android:paddingRight="5px"
        android:paddingLeft="5px"
        android:text="Login"
        android:textColor="#ffffff"
        android:background="@drawable/login_button"
        />
    <TextView android:id="@+id/login_link_signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:padding="20px"
        android:text="No account yet? SIGN UP"
        android:gravity="center"
        android:textColor="#5d10ac"
        android:textSize="16dip"/>


</LinearLayout>