<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:background="#FFFFFF"
    android:layout_marginBottom="2dip">


    <com.pkmmte.view.CircularImageView
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_marginTop="5dip"
        android:id="@+id/followier_image"
        android:src = "@drawable/gangwon"
        android:layout_marginLeft = "10dip"
        android:layout_marginBottom = "10dip"
        />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="70dip"
        android:layout_weight="3">


        <Button
            android:layout_width="75dip"
            android:layout_height="25dip"
            android:id = "@+id/follower_button"
            android:background="@drawable/follow"
            android:textSize="15dip"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            android:layout_below="@+id/follower_user"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:text="New Text"
            android:id="@+id/follower_user"
            android:textSize="15dip"
            android:textColor="#000000"
            android:layout_weight="0.07"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/follower_desc"
            android:textSize="10dip"
            android:textColor="#666666"
            android:layout_below="@+id/follower_button"
            android:layout_alignLeft="@+id/follower_user"
            android:layout_alignStart="@+id/follower_user" />

    </RelativeLayout>
</LinearLayout>